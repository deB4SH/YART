{
  "$id": "https://b4sh.de/cluster/cluster.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cluster Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "supervisorNamespace": {
      "type": "string"
    },
    "adUserVar": {
      "type": "string"
    },
    "adUserPwVar": {
      "type": "string"
    },
    "controlPlane": {
      "type": "object",
      "$ref": "controlplane.schema.json"
    },
    "nodePools:": {
      "type": "array",
      "items": {
        "$ref": "nodepool.schema.json"
      }
    }
  },
  "required": ["name","supervisorNamespace", "adUserVar", "adUserPwVar", "controlPlane", "nodePools"]
}