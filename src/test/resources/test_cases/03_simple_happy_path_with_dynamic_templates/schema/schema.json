{
  "$id": "https://example.com/ballpark.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Happy Dynamic",
  "type": "object",
  "properties": {
    "team": {
      "type": "string"
    },
    "test": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "color": {
            "type": "string"
          }
        },
        "required": ["color","name"]
      }
    }
  },
  "required": ["team", "test"]
}